{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=mu_hub_identity_provider;Username=root;Password=admin"
  },
  "IdentityServer": {
    "Clients": {
      "CodeWithPKCE": [
        {
          "ClientId": "muhub_react",
          "RedirectUris": [
            "https://localhost:3000/signin-oidc"
          ],
          "PostLogoutRedirectUris": [
            "https://localhost:3000/signout-callback-oidc"
          ],
          "AllowedCorsOrigins": [
            "https://localhost:3000"
          ],
          "AllowedScopes": [
            "openid",
            "profile",
            "muhubapi.read",
            "muhubapi.write",
            "muhubapi.delete"
          ]
        }
      ]
    }
  },
  "Authentication": {
    "Google": {
      "ClientId": "Copy client ID from Google here",
      "ClientSecret": "Copy client secret from Google here"
    }
  }
}